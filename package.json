{
  "name": "traffic-to-badge",
  "version": "1.0.0",
  "description": "Use repository traffic data to generate badges that include views and clones.",
  "main": "dist/index.js",
  "scripts": {
    "pre-commit-msg": "echo 'Pre-commit checks...' && exit 0",
    "lint": "eslint .",
    "format": "prettier --write **/*.{js,yml,json}",
    "prepare": "ncc build ./src/index.js -o dist/ --minify",
    "pre-commit": "npm run prepare && git add dist/"
  },
  "pre-commit": [
    "pre-commit-msg",
    "format",
    "lint",
    "pre-commit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi-Xu-0100/traffic-to-badge.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Badge",
    "Traffic"
  ],
  "author": "yi-Xu-0100",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yi-Xu-0100/traffic-to-badge/issues"
  },
  "homepage": "https://github.com/yi-Xu-0100/traffic-to-badge#readme",
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^4.0.0",
    "child_process": "^1.0.2",
    "image-downloader": "^4.0.1",
    "underscore": "^1.11.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.2"
  }
}
